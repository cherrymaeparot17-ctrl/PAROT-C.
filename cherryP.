#include <iostream>
using namespace std;

void checkEvenOdd(int num) {
    if (num % 2 == 0) {
        cout << num << " is an even number." << endl;
    } else {
        cout << num << " is an odd number." << endl;
    }
}

int main() {
    int number;

    cout << "Enter a number: ";
    if (!(cin >> number)) {
        cout << "Error: Please enter a valid integer." << endl;
        return 0;
    }

    checkEvenOdd(number);

    return 0;
}
